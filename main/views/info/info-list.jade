h1 {{gp.gamename}}
| {{gp.scheduling.gameDate | date:'dd.MM.yyyy'}} {{gp.scheduling.gameStart}} - {{gp.scheduling.gameEnd}}
table(class='table table-striped table.condensed')
  thead
    th Pos
    th Ort
    th.pricelist Gruppe
    th.pricelist Kaufpreis
    th.pricelist Hauspreis
    th.pricelist Miete
    th.pricelist Miete 1H
    th.pricelist Miete 2H
    th.pricelist Miete 3H
    th.pricelist Miete 4H
    th.pricelist Miete Hotel
  tbody
    tr(data-ng-repeat='p in pl' )
      td {{p.pricelist.position + 1}}
      td {{p.location.name}}
      td.pricelist {{p.pricelist.propertyGroup}}
      td.pricelist {{p.pricelist.price | amount}}
      td.pricelist {{p.pricelist.pricePerHouse | amount}}
      td.pricelist {{p.pricelist.rents.noHouse | amount}}
      td.pricelist {{p.pricelist.rents.oneHouse | amount}}
      td.pricelist {{p.pricelist.rents.twoHouses | amount}}
      td.pricelist {{p.pricelist.rents.threeHouses | amount}}
      td.pricelist {{p.pricelist.rents.fourHouses | amount}}
      td.pricelist {{p.pricelist.rents.hotel | amount}}
| Version {{gp.log.priceListVersion}}, Stand: {{gp.log.priceListCreated | date:'dd.MM.yyyy'}}
