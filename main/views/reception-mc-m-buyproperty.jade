// Buy a place
.col-md-6
  .panel.panel-default
    .panel-heading
      h3.panel-title Liegenschaft kaufen
    .panel-body
      input(type="text" placeholder="Zürich Paradeplatz" ng-model="propertyQuery" ng-change="runPropertyQuery()" maxlength="30")

      table.table.table-hover
        thead
          th Ort
          th Preis
          th
        tbody
          tr(ng-repeat='p in propertyQueryResult | orderBy:"location.name"')
            td {{p.location.name}}
            td {{p.pricelist.price}}
            td
              button.btn.btn-default.btn-sm(type="button" data-toggle="modal" data-target="#confirmBuy" ng-click="setPropertyInvestCandidate(p)") kaufen

// Build Houses
.col-md-6
  .row
    .col-md-6
      .panel.panel-default
        .panel-heading
          h3.panel-title Häuserbau
        .panel-body
          button.btn.btn-default(type="button"  ng-click="buyHouses()") Häuser bauen
    .col-md-6
      .panel.panel-default
        .panel-heading
          h3.panel-title Gambling
        .panel-body
          input(type="number" inputmode="numeric" min=0 step=500 ng-model="gambleAmount")
          p
          p
            button.btn.btn-success(type="button"  ng-click="gamble(1)") Gewinn
            | &nbsp;&nbsp;
            button.btn.btn-warning(type="button"  ng-click="gamble(-1)") Verlust



  .panel.panel-default
    .panel-heading
      h3.panel-title Anruf-Log
    .panel-body
      div(ng-repeat='e in callLog | orderBy:"-ts"')
        div(class='alert {{e.class}}' role='alert')
         .call-log-ts {{e.ts | date:'HH:mm:ss'}}&nbsp;
         .call-log-title {{e.title}}:&nbsp;
         .call-log-message {{e.message}}
