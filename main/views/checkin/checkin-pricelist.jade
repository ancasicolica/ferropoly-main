h1 Preisliste
div(ng-controller='pricelistCtrl')
  table.table.table-striped
    thead
      tr
        th #
        th Ort
        th Gruppe
        th Preis
    tbody
      tr(ng-repeat='p in pricelist')
        td {{p.pricelist.position + 1}}
          i.fa.fa-flag(ng-show='p.gamedata.owner') &nbsp;
        td {{p.location.name}}
        td {{p.pricelist.propertyGroup}}
        td {{p.pricelist.price}}
