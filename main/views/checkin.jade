extends layout

block head
  script(src='/modules/moment/min/moment.min.js')
  script(src='/modules/moment/locale/de.js')
  script(src='/js/checkin/index.js')

  link(rel='stylesheet', href='/css/checkin.css',  type='text/css')

block navbar-right
  li
    a(href='#' onclick='activateView("#view-dashboard")') Dashboard
  li
    a(href='#' onclick='activateView("#view-map")') Karte
  li
    a(href='#' onclick='activateView("#view-teamaccount")') Kontobuch
  li
    a(href='/account') Mein Account

block content

  #view-dashboard
    include checkin/checkin-dashboard
  #view-map
    include checkin/checkin-map
  #view-teamaccount
    include checkin/checkin-teamaccount
